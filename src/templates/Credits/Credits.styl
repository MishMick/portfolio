@import "~@/styles/page.styl"
@import "~@/styles/media.styl"
@import "~@/styles/animations.styl"

.credits
  main
    .section
      display flex
      flex-direction column
      justify-content center

      &#dedication
        page-with-footer()

        align-items center

        .imagery
          display flex
          flex-direction column
          align-items center
          justify-content center

          height 100%

          .family
            vertical-align bottom

      &#thanks
        page()

        .solarized
          rainbow()
          animation-duration 'calc(4 * %s)' % $duration-content

        .carousel-content
          display flex
          flex-direction column
          align-items center

          .image
            height 3em

            border-radius $space-small

            margin-bottom $space-small

          .text
            color $color-accent-cyan

            font-weight $weight-bold
