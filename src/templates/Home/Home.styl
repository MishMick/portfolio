@import "~@/styles/tokens.styl"
@import "~@/styles/page.styl"
@import "~@/styles/reset.styl"
@import "~@/styles/animations.styl"
@import "~@/styles/transitions.styl"

.home
  page-with-footer()

  position relative

  display flex
  flex-direction column
  justify-content center
  align-items center

  main
    .pane
      &.left
        display flex
        align-items center
        justify-content center

        .avatar-spinner
          rotate-horizontal()

      &.right
        .role
          display inline-flex
          flex-direction row

          rotate-vertical()

          .border
            position absolute
            bottom '-%s' % $space-smallest
            left 0

            background-image linear-gradient(
              90deg,
              transparent 50%,
              var(--heading-color) 50%
            )
            background-size 200%

            width 100%
            height $space-smallest

            grow()
            animation-duration 'calc(8s - %s)' % $duration-standard
            animation-delay $duration-standard

        .run-on
          color var(--secondary-content)

  footer
    font-weight $weight-semibold

    .wave
      display inline-block

      transform-origin 0 100%

      wave()
      animation-duration $duration-longest
