@import "~@/styles/tokens.styl"
@import "~@/styles/content.styl"
@import "~@/styles/animations.styl"
@import "~@/styles/transitions.styl"

.home
  content()

  .avatar-spinner
    flip('horizontal', 0deg, 0deg, 0deg, 90deg, 0deg, -90deg)

  .role
    display inline-flex
    flex-direction row

    flip('vertical', -90deg, 0deg, 90deg, 0deg, 0deg, 0deg)

    .border
      position absolute
      top 0
      left '-%s' % $space-smaller

      z-index -1

      background var(--background-highlights)
      width 0

      grow(100%, 100%, 0, 'calc(100% + 2 * %s)' % $space-smaller)
      animation-duration 'calc(8s - %s)' % $duration-standard
      animation-delay $duration-standard

  footer
    display flex

    flex-direction row

    align-items center
    justify-content space-between

    width 100%
    box-sizing border-box

    padding-left $space-normal
    padding-right $space-normal

    .kaomoji
      font-weight $weight-semibold

      margin-left auto
      margin-right auto

      .wave
        display inline-block

        transform-origin 0 100%

        wave()
        animation-duration $duration-longest
