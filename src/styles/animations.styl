wave()
  animation-name wave
  animation-timing-function linear
  animation-iteration-count infinite

  @keyframes wave
    0%, 42.5%, 47.5%, 52.5%, 57.5%, 100%
      transform rotate(0deg)

    45%, 50%, 55%
      transform rotate(15deg)

grow(heightfrom=0, heightto=0, widthfrom=0, widthto=0)
  animation-name grow
  animation-timing-function linear
  animation-fill-mode forwards

  @keyframes grow
    0%
      width widthfrom
      height heightfrom

    75%, 90%
      width widthto
      height heightto
      opacity 1

    100%
      width widthto
      height heightto
      opacity 0

swipe(xfrom=0, xmid=0, xto=0, yfrom=0, ymid=0, yto=0)
  animation-name swipe
  animation-timing-function linear
  animation-iteration-count infinite

  @keyframes swipe
    0%
      transform translate(xfrom, yfrom)
      opacity 0

    50%
      transform translate(xmid, ymid)
      opacity 1

    100%
      transform translate(xto, yto)
      opacity 0

bobble(upper=10deg, lower=0deg)
  animation-name bobble
  animation-timing-function ease-in-out
  animation-iteration-count infinite

  @keyframes bobble
    50%
      transform rotate(upper)

    0%, 100%
      transform rotate(lower)

rainbow()
  animation-name rainbow
  animation-timing-function ease-in-out
  animation-iteration-count infinite

  @keyframes rainbow
    0%, 10%, 100%
      color $color-accent-yellow

    12.5%, 22.5%
      color $color-accent-orange

    25%, 35%
      color $color-accent-red

    37.5%, 47.5%
      color $color-accent-magenta

    50%, 60%
      color $color-accent-violet

    62.5%, 72.5%
      color $color-accent-blue

    75%, 85%
      color $color-accent-cyan

    87.5%, 97.5%
      color $color-accent-green

blink(upper=1, lower=0)
  animation-name blink
  animation-timing-function linear
  animation-iteration-count infinite

  @keyframes blink
    0%, 100%
      opacity lower

    50%
      opacity upper

pulse()
  backface-visibility hidden // Backface hack to reduce blur

  animation-name pulse
  animation-timing-function linear
  animation-iteration-count infinite

  @keyframes pulse
    0%, 100%
      tranform scale(1) translateZ(0) // Translate hack to reduce blur

    50%
      transform scale(1.05) translateZ(0)

mirror()
  transform-origin 50% 100%

  animation-name mirror
  animation-timing-function linear
  animation-iteration-count infinite

  @keyframes mirror
    0%, 55%, 100%
      transform rotateY(0)

    5%, 50%
      transform rotateY(180deg)


