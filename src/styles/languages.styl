@import "~@/styles/tokens.styl"

@import "~@/styles/latex.styl"

@import "~@/styles/languages/md.styl"
@import "~@/styles/languages/rst.styl"
@import "~@/styles/languages/tex.styl"
@import "~@/styles/languages/gen.styl"

languages()
  // Inter-markup conversion
  [class*="lang"]
    *
      font-size 1em
      margin 0

      &::before,
      &::after
        font-weight $weight-normal

    latex()

    h1, h2, h3
      margin-top $space-line

    h1
      color $color-accent-green

    h2
      color $color-accent-violet

    h3
      color $color-accent-blue

    p
      margin-top 0
      margin-bottom $space-line

  .lang-md
    md()

  .lang-rst
    rst()

  .lang-tex
    tex()

  // Syntax highlighting
  .lang-gen
    gen()
