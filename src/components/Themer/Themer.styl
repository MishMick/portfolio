@import "~@/styles/tokens.styl"
@import "~@/styles/button.styl"

.themer
  button-reset()

  display inline-flex
  align-items center
  justify-content center

  cursor pointer

  box-sizing border-box
  height $height-navbar
  width $height-navbar

  border-top-width $space-smaller
  border-top-style solid
  border-top-color transparent

  transition-property color, background-color, border-top-color
  transition-duration $duration-standard

  .content
    display inline-block

    padding $space-small

    color var(--background-opposite)

  &:hover
    border-top-color var(--background-opposite)
